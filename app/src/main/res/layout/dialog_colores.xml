<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:elevation="25dp"
    android:background="@color/dialogo_bg">

    <ImageButton
        android:id="@+id/rojo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        android:background="@color/rojo"/>

    <ImageButton
        android:id="@+id/amarillo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:background="@color/amarillo"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/rojo"/>

    <ImageButton
        android:id="@+id/azul"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:background="@color/azul"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/amarillo"/>

    <ImageButton
        android:id="@+id/verde"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp"
        android:background="@color/verde"
        android:layout_below="@+id/rojo"/>

    <ImageButton
        android:id="@+id/naranja"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/naranja"
        android:layout_margin="2dp"
        android:layout_below="@+id/amarillo"
        android:layout_toEndOf="@id/verde"/>

    <ImageButton
        android:id="@+id/rosa"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        android:background="@color/rosa"
        android:layout_below="@+id/azul"
        android:layout_toEndOf="@id/naranja"/>

    <ImageButton
        android:id="@+id/violeta"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        android:background="@color/violeta"
        android:layout_below="@+id/verde"/>

    <ImageButton
        android:id="@+id/negro"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        android:background="@color/negro"
        android:layout_below="@+id/naranja"
        android:layout_toEndOf="@id/violeta"/>

</RelativeLayout>